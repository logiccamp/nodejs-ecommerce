<!-- shopping cart -->

<section class="h-100" style="background-color: #eee;">
   <div class="container h-100 py-5">
      <div class="row d-flex justify-content-center align-items-center h-100">
         <div class="col-10">

            <div class="d-flex justify-content-between align-items-center mb-4">
               <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
               <div>

               </div>
            </div>
            <%if (cart.length> 0) { %>

               <% cart.forEach(function(cart) { %>
                  <div class="card rounded-3 mb-4">
                     <div class="card-body p-4">
                        <div class="row d-flex justify-content-between align-items-center">
                           <div class="col-md-2 col-lg-2 col-xl-2">
                              <img src="<%= cart.image %>" class="img-fluid rounded-3" alt="Cotton T-shirt">
                           </div>
                           <div class="col-md-3 col-lg-3 col-xl-3">
                              <p class="lead fw-normal mb-2">
                                 <%= cart.name %>
                              </p>
                           </div>
                           <div class="col-md-3 col-lg-3 col-xl-2 d-flex align-items-center">
                              <button data-product="<%= cart.id %>" data-action="descrease"
                                 class="btn m-0 py-0 btn-link px-2 <%= cart.quantity == 1 ? 'disabled' : 'updateCart' %>">
                                 <i class="fa fa-minus"></i>
                              </button>

                              <input id="form1" name="quantity" value="<%= cart.quantity %>" type="text" disabled
                                 class="form-control m-0  form-control-sm" />

                              <button class="btn m-0 py-0 btn-link px-2 updateCart" data-action="increase"
                                 data-product="<%= cart.id %>">
                                 <i class="fa fa-plus"></i>
                              </button>
                           </div>
                           <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                              <h5 class="mb-0 font-weight-bold">N<%= cart.price * cart.quantity %>
                              </h5>
                           </div>
                           <div class="col-md-1 col-lg-1 col-xl-1 text-end" data-item="<%= cart.id %>">
                              <form action="/remove-cart" method="post">
                                 <input type="text" name="product_id" value="<%= cart.id %>" hidden>
                                 <button class="btn text-danger"><i class="fa fa-trash fa-lg"></i></a>
                              </form>
                           </div>
                        </div>
                     </div>
                  </div>
                  <% }) %>

                     <div class="card">
                        <div class="card-body">
                           <button onclick="window.location.assign('/checkout')" type="button"
                              class="read-more btn-block btn-lg">Proceed to Pay</button>
                           <div class="text-center">
                              <h4 class="font-weight-bold">Total : <%= total %>
                              </h4>
                           </div>
                        </div>
                     </div>
                     <% }else { %>
                        <div class="card">
                           <div class="card-body">
                              No item in your cart <a class="read-more" href="/">Continue Shopping</a>
                           </div>
                        </div>
                        <% } %>
         </div>
      </div>
   </div>
</section>

