
   <!-- shopping cart -->

   <section class="h-100" style="background-color: #eee;">
      <div class="container h-100 py-5">
         <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

               <div class="d-flex justify-content-between align-items-center mb-4">
                  <h3 class="fw-normal mb-0 text-black">Checkout</h3>
                  <div>

                  </div>
               </div>
               <%if (cart.length> 0) { %>

                  <form action="/post-order" method="post" class="form">
                     <div class="card">
                        <div class="card-body">
                           <div class="row gx-3 gy-3">
                              <div class="col-md-6">
                                 <label for="">Fullname</label>
                                 <input type="text" class="form-control" required name="name">
                              </div>

                              <div class="col-md-6">
                                 <label for="">Email</label>
                                 <input type="email" class="form-control" required name="email">
                              </div>

                              <div class="col-md-6">
                                 <label for="">Phone</label>
                                 <input type="text" class="form-control" required name="phone">
                              </div>

                              <div class="col-md-6">
                                 <label for="">City</label>
                                 <input type="text" class="form-control" required name="city">
                              </div>

                              <div class="col-md-12">
                                 <label for="">Address</label>
                                 <input type="text" class="form-control" required name="address">
                              </div>

                           </div>
                        </div>
                     </div>

                     <div class="card">
                        <div class="card-body">
                           <button type="submit" class="read-more btn-block btn-lg">Pay Now</button>
                           <div class="text-center">
                              <h4 class="font-weight-bold">Total : <%= total %>
                              </h4>
                           </div>
                        </div>
                     </div>
                  </form>
                  <% }else { %>
                     <div class="card">
                        <div class="card-body">
                           No item in your cart <a class="read-more" href="/">Continue Shopping</a>
                        </div>
                     </div>
                     <% } %>
            </div>
         </div>
      </div>
   </section>

